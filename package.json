{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "mosque-management-system",
  "version": "1.0.0",
  "description": "School Mosque Management System - MERN Stack with MongoDB",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "Frontend/client",
    "Backend/server"
  ],
  "scripts": {
    "install:all": "npm install && cd Frontend/client && npm install && cd ../../Backend/server && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd Frontend/client && npm run dev",
    "dev:server": "cd Backend/server && npm run dev",
    "build": "cd Frontend/client && npm run build",
    "build:server": "cd Backend/server && npm run build",
    "start": "cd Backend/server && npm start",
    "preview": "cd Frontend/client && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["mosque", "management", "system", "mern", "mongodb"],
  "author": "",
  "license": "MIT"
}
